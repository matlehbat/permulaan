<%@page contentType="text/html" pageEncoding="UTF-8"%>
<%@page import="java.math.*"%>
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <title>JSP Page</title>
    </head>
    <body>
        <%
        int num1 = 25;
        int num2 = 10;
        int add_op;
        int multiply_op;
        double squareroot = 0.00;
        
        java.util.Formatter myFormat = new java.util.Formatter();
        
        add_op = num1 + num2;
        multiply_op = num1 * num2;
        
        squareroot = (double)(Math.sqrt(num1));
        
        out.print("<p>Addition num1 and num2 is "+add_op+"</p>");
        out.print("<p>Multiplication num1 and num2 is: "+multiply_op+"</p>");
        
        out.print("<p</p>");
        out.print("<p>Square root of "+num1+" is "+myFormat.format("%.2f",squareroot)+"</p>");
        
        %>
        
    </body>
</html>
